{
    "workbench.colorTheme": "Atom One Light",
    "editor.fontSize": 18,
    "editor.fontFamily": "'Monaco','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback','MesloLGS NF'",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "vs-minimal",
    "debug.console.fontSize": 18,
    "markdown.preview.fontSize": 21,
    "terminal.integrated.fontSize": 13,
    "breadcrumbs.enabled": false,
    // "editor.folding": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    // "editor.occurrencesHighlight": false,
    "editor.roundedSelection": false,
    "editor.scrollBeyondLastLine": false,
    "explorer.decorations.colors": false,
    "explorer.openEditors.visible": 0,
    "workbench.activityBar.visible": false,
    "workbench.editor.showIcons": false,
    "workbench.tree.renderIndentGuides": "none",
    // "editor.cursorBlinking": "solid",
    "timeline.excludeSources": [
        "git-history"
    ],
    "window.zoomLevel": 2,
    "workbench.editor.pinnedTabSizing": "compact",
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "vscode-remote": "linux",
        "vscode-remote0": "linux",
        "vscode-remote-gz": "linux"
    },
    "window.titleBarStyle": "custom",
    "terminal.integrated.defaultLocation": "editor",
    "window.restoreWindows": "none",
    "terminal.integrated.fontFamily": "'MesloLGS NF'",
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-w>": false,
        "<C-b>": false,
        "<C-'>": false,
    },
    // "vim.debug.loggingLevelForAlert": "debug", 
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-c>"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<left>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<up>"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<down>"]
        },
        {
            "before": ["<C-;>"],
            "after": ["<right>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-right>"],
            "after": ["$"]
        },
        {
            "before": ["<C-j>"],
            "after": ["^"]
        },
        {
            "before": ["<C-k>"],
            "after": ["8","<up>"]
        },
        {
            "before": ["<C-l>"],
            "after": ["8","<down>"]
        },
        {
            "before": ["k"],
            "after": ["<up>"]
        },
        {
            "before": ["l"],
            "after": ["<down>"]
        },
        {
            "before": [";"],
            "after": ["<right>"]
        },
        {
            "before": ["j"],
            "after": ["<left>"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["L"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": [":"],
            "after": ["$"]
        },
        {
            "before": ["z"],
            "after": ["e"]
        }, 
        {
            "before": ["Z"],
            "after": ["E"]
        }
        
    ],

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["L"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        
        {
            "before": ["m"],
            "after": ["4","<C-e>"]
        },
        {
            "before": ["<C-m>"],
            "after": ["4","<C-y>"]
        },
        {
            "before": ["f"],
            "commands": ["editor.toggleFold"]
        }, 
        {
            "before": ["<C-a>"],
            "after": ["g","g","V","G"]
        }, 

        {
            "before": [":"],
            "after": ["$"]
        },
        {
            "before": ["k"],
            "after": ["<up>"]
        },
        {
            "before": ["l"],
            "after": ["<down>"]
        },
        {
            "before": [";"],
            "after": ["<right>"]
        },
        {
            "before": ["j"],
            "after": ["<left>"]
        },
        {
            "before": ["z"],
            "after": ["e"]
        },  
        {
            "before": ["<C-k>"],
            "after": ["8","<up>"]
        },
        {
            "before": ["<C-l>"],
            "after": ["8","<down>"]
        },
        {
            "before": ["<C-j>"],
            "after": ["^"]
        },
        {
            "before": ["<C-right>"],
            "after": ["$"]
        },
        
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["q"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["e"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<tab>"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<shift+tab>"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.commandLineModeKeyBindings": [
  
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
    
    ],
    "vim.useSystemClipboard": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.cursorBlinking": "solid",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "settingsSync.ignoredExtensions": [
        "emroussel.atomize-atom-one-dark-theme",
        "scalameta.metals"
    ],
    "vim.foldfix": true,
    "editor.detectIndentation": false

}